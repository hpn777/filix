{
  "name": "filix",
  "description": "General purpose application server.",
  "scripts": {
    "spa": "cd ../devops/docker/local && docker-compose up spa",
    "appservice": "cd ../devops/docker/local && docker-compose up appservice",
    "all": "cd ../devops/docker/local && docker-compose up",
    "adminer": "cd ../devops/docker/local && docker-compose up adminer",
    "stop": "cd ../devops/docker/local && docker-compose stop",
    "build": "tsc && echo 'Done.'",
    "buildExecutable": "./node_modules/.bin/pkg . -o ./bin/filix_backend",
    "watch": "tsc -w",
    "up": "npm run build && npm run appservice",
    "lint": "eslint --fix --debug -c ./.eslintrc .",
    "lint:debug": "eslint --fix -c ./.eslintrc .",
    "prettify": "prettier --write ./src",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:integration": "echo '⚠️  Use test:integration:docker for proper Docker-based testing' && vitest run tests/integration",
    "test:integration:watch": "vitest --watch tests/integration",
    "test:integration:docker": "docker compose -f docker-compose.test.yml up --build -d && docker compose -f docker-compose.test.yml exec -T filix-server npm run test:integration:inside-docker; docker compose -f docker-compose.test.yml down;",
    "test:integration:inside-docker": "IN_DOCKER=true vitest run tests/integration",
    "test:docker": "node dist/server.js -c ./config/test.yml",
    "test:docker:up": "docker compose -f docker-compose.test.yml up --build",
    "test:docker:down": "docker compose -f docker-compose.test.yml down -v",
    "test:docker:logs": "docker compose -f docker-compose.test.yml logs -f",
    "test:ldap": "vitest run tests/integration/ldap",
    "test:ldap:watch": "vitest --watch tests/integration/ldap",
    "appservice:restart": "docker restart n8_core-appservice-1"
  },
  "main": "./dist/server.js",
  "bin": "./dist/server.js",
  "author": "Rafal Okninski",
  "license": "MIT",
  "dependencies": {
    "activedirectory": "^0.7.2",
    "ajv": "8.6.2",
    "argparse": "^2.0.1",
    "atob": "^2.1.2",
    "flat": "^5.0.2",
    "js-yaml": "^4.1.0",
    "json-bigint": "^1.0.0",
    "ldapjs": "^2.3.3",
    "linq": "3.0.5",
    "orm3": "^9.3.2",
    "pg": "8.7.3",
    "pg-listen": "^1.7.0",
    "rx": "4.1.0",
    "rxjs": "^6.3.3",
    "sinon": "^17.0.1",
    "source-map-support": "^0.5.21",
    "tail": "0.4.0",
    "tessio": "4.0.4",
    "winston": "^3.15.0",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "@types/argparse": "^2.0.15",
    "@types/backbone": "^1.4.16",
    "@types/flat": "^5.0.5",
    "@types/js-yaml": "3.12.2",
    "@types/json-bigint": "^1.0.4",
    "@types/lodash": "^4.14.199",
    "@types/lodash.merge": "^4.6.6",
    "@types/lodash.random": "3.2.6",
    "@types/lodash.range": "3.2.6",
    "@types/minimist": "1.2.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "lodash": "^4.17.21",
    "papaparse": "^5.4.1",
    "prettier": "^2.7.1",
    "tslib": "^2.1.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
