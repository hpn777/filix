FROM node:24-alpine

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    wget \
    openldap-clients

# Copy filix module first (local dependency)
COPY filix /filix
WORKDIR /filix
RUN npm ci && npm run build

# Switch to app directory
WORKDIR /app

# Copy package files
COPY backend/package*.json ./
COPY backend/tsconfig.json ./

# Update filix path for Docker environment
RUN sed -i 's|"filix": "file:../filix"|"filix": "file:/filix"|g' package.json

# Install dependencies (this will link to /filix)
RUN npm ci

# Copy source code
COPY backend/src ./src
COPY backend/tests ./tests
COPY backend/config ./config
COPY backend/load-test-fixtures.js ./

# Build TypeScript
RUN npm run build || true

# Set environment for Docker
ENV IN_DOCKER=true
ENV NODE_ENV=test

# Expose port
EXPOSE 3000

# Health check endpoint
HEALTHCHECK --interval=10s --timeout=5s --start-period=30s --retries=5 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000/health || exit 1

# Default command - can be overridden
CMD ["npm", "run", "test:docker"]
